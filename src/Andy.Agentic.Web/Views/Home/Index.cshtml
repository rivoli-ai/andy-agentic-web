@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Andy Agentic Web</h1>
    <p class="lead">A modern web platform for seamless integration of Large Language Models, APIs, and Model Context Protocol servers.</p>
</div>

<div class="row mt-5">
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-brain fa-3x mb-3" style="color: #667eea;"></i>
                <h5 class="card-title">Universal LLM Support</h5>
                <p class="card-text">Connect to any LLM provider including OpenAI, Anthropic, Google, and local models.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-plug fa-3x mb-3" style="color: #764ba2;"></i>
                <h5 class="card-title">API Integration</h5>
                <p class="card-text">Seamlessly integrate with any REST or GraphQL API for enhanced functionality.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-server fa-3x mb-3" style="color: #667eea;"></i>
                <h5 class="card-title">MCP Compatibility</h5>
                <p class="card-text">Full support for Model Context Protocol servers for advanced AI workflows.</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-robot fa-3x mb-3" style="color: #764ba2;"></i>
                <h5 class="card-title">Agent Orchestration</h5>
                <p class="card-text">Create and manage complex multi-agent workflows with ease.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-chart-line fa-3x mb-3" style="color: #667eea;"></i>
                <h5 class="card-title">Real-time Monitoring</h5>
                <p class="card-text">Track agent activities and performance in real-time.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-puzzle-piece fa-3x mb-3" style="color: #764ba2;"></i>
                <h5 class="card-title">Extensible Architecture</h5>
                <p class="card-text">Plugin system for custom integrations and extensions.</p>
            </div>
        </div>
    </div>
</div>